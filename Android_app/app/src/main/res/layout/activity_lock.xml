<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LockActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:paddingTop="16dp"
        android:gravity="center"
        android:text="SMART LOCK" />

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="350dp"
        app:button_bottom_padding="20dp"
        app:button_image_disabled="@drawable/ic_lock_outline_black_24dp"
        app:button_image_enabled="@drawable/ic_lock_open_black_24dp"
        app:button_left_padding="20dp"
        app:button_right_padding="20dp"
        app:button_top_padding="20dp"
        app:inner_text="밀어서 잠금 해제"
        app:inner_text_bottom_padding="20dp"
        app:inner_text_size="18sp"
        app:inner_text_top_padding="20dp" />
</RelativeLayout>